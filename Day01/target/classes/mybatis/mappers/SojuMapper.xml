<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mappers.SojuMapper">

	<select id="selectByWriter" resultType="String" parameterType="String">
		select * from soju
		where writer = #{writer}
	</select>

	<select id="selectDistinctSojuList" resultType="String">
		select distinct menu from soju
	</select>

	<insert id="insertUser" parameterType="UserVo">
		insert into users_tb(userName, registNumber, userId, userPw)
		values(#{userName},#{registNumber},#{userId},#{userPw})
		<selectKey keyProperty="userNo" order="AFTER" resultType="long">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateUser" parameterType="UserVo">
		update users_tb set
		userPw
		= #{userPw}
		where registNumber = #{registNumber}
	</update>

	<delete id="deleteUser" parameterType="UserVo">
		delete from users_tb where
		userId = #{userId}
	</delete>
	
</mapper>